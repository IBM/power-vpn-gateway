conn pvs
   auto=start
   dpdaction=restart
   dpddelay=2s
   dpdtimeout=10s
   type=tunnel
   left=%defaultroute
   leftauth=secret
   leftid=@${identity_local}
   rightauth=secret
   right=${peer_address}
   rightid=@${identity_remote}
   ikev2=yes
   ike=aes256-sha256,aes256-sha384,aes256-sha512,aes192-sha256,aes192-sha384,aes192-sha512,aes128-sha256,aes128-sha384,aes128-sha512
   esp=aes_gcm-null,aes256-sha256,aes256-sha384,aes256-sha512,aes192-sha256,aes192-sha384,aes192-sha512,aes128-sha256,aes128-sha384,aes128-sha512
   salifetime=10800s
   ikelifetime=36000s
   pfs=no
   rightsubnets=${client_cidrs}
   leftsubnets=${local_cidrs}
   rekey=yes
